{% extends 'base.html.twig' %}

{% block title %}{{ news.title }} - GameHub{% endblock %}

{% block body %}
<div class="container mx-auto px-4 pt-24 pb-20 max-w-4xl">
    <a href="{{ path('news_index') }}" class="text-primary hover:text-primary/80 flex items-center gap-2 mb-8">
        <i class="fas fa-arrow-left"></i>
        Back to News
    </a>

    <div class="card-gaming p-8 mb-12">
        <div class="mb-6">
            <div class="inline-block bg-primary/20 px-3 py-1 rounded text-primary text-xs font-bold mb-3">
                {{ news.category }}
            </div>
            <h1 class="font-orbitron text-4xl md:text-5xl font-bold text-foreground mb-4">
                {{ news.title }}
            </h1>
            <div class="flex flex-wrap items-center gap-6 text-sm text-muted-foreground">
                <span><i class="fas fa-calendar mr-2"></i>{{ news.publishDate|date('F j, Y') }}</span>
                {% if news.author %}
                    <span><i class="fas fa-user mr-2"></i>{{ news.author }}</span>
                {% endif %}
                {% if news.url %}
                    <a href="{{ news.url }}" target="_blank" class="text-primary hover:text-primary/80">
                        <i class="fas fa-external-link-alt mr-2"></i>Read Original
                    </a>
                {% endif %}
            </div>
        </div>

        {% if news.image %}
            <div class="mb-8 aspect-video overflow-hidden rounded-lg">
                <img src="{{ news.image }}" alt="{{ news.title }}" class="w-full h-full object-cover">
            </div>
        {% endif %}

        <div class="mb-8">
            <div class="text-lg text-foreground leading-relaxed mb-6">
                {{ news.content }}
            </div>
            
            <div class="bg-muted/50 border border-border rounded-lg p-6 mb-6">
                <h3 class="font-orbitron font-semibold text-foreground mb-3">
                    <i class="fas fa-newspaper text-primary mr-2"></i>Article Information
                </h3>
                <div class="space-y-2 text-sm text-muted-foreground">
                    <div><span class="font-semibold text-foreground">Source:</span> {{ news.category }}</div>
                    <div><span class="font-semibold text-foreground">Published:</span> {{ news.publishDate|date('F j, Y \a\t g:i A') }}</div>
                    {% if news.author %}
                        <div><span class="font-semibold text-foreground">Author:</span> {{ news.author }}</div>
                    {% endif %}
                </div>
            </div>
        </div>

        {% if news.url %}
            <div class="bg-primary/10 border border-primary/30 rounded-lg p-6">
                <p class="text-foreground mb-4">
                    <i class="fas fa-info-circle text-primary mr-2"></i>
                    For the complete article with more details, click the button below to visit the original source.
                </p>
                <a href="{{ news.url }}" target="_blank" class="btn-hero inline-flex items-center gap-2">
                    <i class="fas fa-external-link-alt"></i>
                    Read Full Article on Source
                </a>
            </div>
        {% endif %}
    </div>

    {% if relatedNews|length > 0 %}
        <div>
            <h2 class="font-orbitron text-2xl font-bold text-foreground mb-6">
                <i class="fas fa-newspaper text-primary mr-3"></i>More Gaming News
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for article in relatedNews %}
                    <a href="{{ path('news_show', {id: article.id}) }}" class="card-gaming overflow-hidden group hover:shadow-lg hover:shadow-primary/20 transition-all duration-300 flex flex-col h-full">
                        {% if article.image %}
                            <div class="aspect-video overflow-hidden">
                                <img src="{{ article.image }}" alt="{{ article.title }}" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                            </div>
                        {% else %}
                            <div class="aspect-video bg-muted flex items-center justify-center">
                                <i class="fas fa-newspaper text-muted-foreground text-3xl"></i>
                            </div>
                        {% endif %}
                        <div class="p-4 flex flex-col flex-grow">
                            <div class="inline-block bg-primary/20 px-2 py-1 rounded text-primary text-xs font-bold mb-2 w-fit">
                                {{ article.category }}
                            </div>
                            <h3 class="font-orbitron text-lg font-semibold text-foreground group-hover:text-primary transition-colors line-clamp-2 mb-2">
                                {{ article.title }}
                            </h3>
                            <p class="text-xs text-muted-foreground mt-auto">
                                {{ article.publishDate|date('M j, Y') }}
                            </p>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
