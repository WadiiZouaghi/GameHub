{% extends 'base.html.twig' %}

{% block title %}Edit News - GameHub{% endblock %}

{% block body %}
<div class="container mx-auto px-4 pt-24 pb-20">
    <div class="max-w-2xl mx-auto">
        <div class="mb-12">
            <h1 class="font-orbitron text-4xl font-bold text-foreground mb-4">
                <span class="text-gradient">Edit</span> News Article
            </h1>
            <p class="text-muted-foreground">Update the news article</p>
        </div>

        <div class="card-gaming p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                <div>
                    {{ form_label(form.title, 'Article Title', {'label_attr': {'class': 'block text-sm font-rajdhani font-semibold text-foreground mb-2'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-3 bg-card border border-border rounded-lg text-foreground focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary/50 transition'}}) }}
                    {% if form.title.vars.errors %}
                        <div class="mt-1 text-destructive text-sm">
                            {{ form_errors(form.title) }}
                        </div>
                    {% endif %}
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        {{ form_label(form.category, 'Category', {'label_attr': {'class': 'block text-sm font-rajdhani font-semibold text-foreground mb-2'}}) }}
                        {{ form_widget(form.category, {'attr': {'class': 'w-full px-4 py-3 bg-card border border-border rounded-lg text-foreground focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary/50 transition'}}) }}
                        {% if form.category.vars.errors %}
                            <div class="mt-1 text-destructive text-sm">
                                {{ form_errors(form.category) }}
                            </div>
                        {% endif %}
                    </div>

                    <div>
                        {{ form_label(form.author, 'Author', {'label_attr': {'class': 'block text-sm font-rajdhani font-semibold text-foreground mb-2'}}) }}
                        {{ form_widget(form.author, {'attr': {'class': 'w-full px-4 py-3 bg-card border border-border rounded-lg text-foreground focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary/50 transition'}}) }}
                        {% if form.author.vars.errors %}
                            <div class="mt-1 text-destructive text-sm">
                                {{ form_errors(form.author) }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div>
                    {{ form_label(form.content, 'Content', {'label_attr': {'class': 'block text-sm font-rajdhani font-semibold text-foreground mb-2'}}) }}
                    {{ form_widget(form.content, {'attr': {'class': 'w-full px-4 py-3 bg-card border border-border rounded-lg text-foreground focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary/50 transition', 'rows': 10}}) }}
                    {% if form.content.vars.errors %}
                        <div class="mt-1 text-destructive text-sm">
                            {{ form_errors(form.content) }}
                        </div>
                    {% endif %}
                </div>

                <div>
                    {% if news.image %}
                        <div class="mb-4 aspect-video overflow-hidden rounded-lg">
                            <img src="{{ asset(news.image) }}" alt="{{ news.title }}" class="w-full h-full object-cover">
                        </div>
                    {% endif %}
                    {{ form_label(form.image, 'Featured Image', {'label_attr': {'class': 'block text-sm font-rajdhani font-semibold text-foreground mb-2'}}) }}
                    {{ form_widget(form.image, {'attr': {'class': 'w-full px-4 py-3 bg-card border border-border rounded-lg text-foreground focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary/50 transition'}}) }}
                    <small class="block mt-2 text-xs text-muted-foreground">Leave empty to keep current image</small>
                    {% if form.image.vars.errors %}
                        <div class="mt-1 text-destructive text-sm">
                            {{ form_errors(form.image) }}
                        </div>
                    {% endif %}
                </div>

                <div class="flex gap-4 pt-6 border-t border-border">
                    <button class="flex-1 btn-hero flex items-center justify-center gap-2" type="submit">
                        <i class="fas fa-save"></i>
                        Save Changes
                    </button>
                    <a href="{{ path('news_show', {id: news.id}) }}" class="flex-1 btn-gaming flex items-center justify-center gap-2">
                        <i class="fas fa-times"></i>
                        Cancel
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
