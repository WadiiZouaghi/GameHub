{% extends 'admin/dashboard.html.twig' %}

{% block title %}Edit Event - GameHub Admin{% endblock %}

{% block body %}
<div class="admin-layout">
    <aside class="admin-sidebar-nav">
        <div class="admin-sidebar-header">
            <h2>GameHub Admin</h2>
        </div>
        <nav class="admin-sidebar-menu">
            <a href="{{ path('admin_dashboard') }}" class="admin-menu-item">
                <i class="fas fa-tachometer-alt"></i>
                Dashboard
            </a>
            <a href="{{ path('admin_games') }}" class="admin-menu-item">
                <i class="fas fa-gamepad"></i>
                Games
            </a>
            <a href="{{ path('admin_users') }}" class="admin-menu-item">
                <i class="fas fa-users"></i>
                Users
            </a>
            <a href="{{ path('admin_events') }}" class="admin-menu-item active">
                <i class="fas fa-calendar-alt"></i>
                Events
            </a>
            <a href="{{ path('admin_reviews') }}" class="admin-menu-item">
                <i class="fas fa-star"></i>
                Reviews
            </a>
        </nav>
    </aside>

    <main class="admin-main">
        <div class="admin-main-content">
            <div class="admin-header">
                <div class="admin-welcome">
                    <div class="admin-avatar">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                    <div class="welcome-content">
                        <h1>Edit Event</h1>
                        <p>Update event details</p>
                    </div>
                </div>
            </div>

            <div class="admin-section">
                <a href="{{ path('admin_events') }}" class="btn btn-outline" style="margin-bottom: 1rem;">
                    <i class="fas fa-arrow-left"></i>
                    Back to Events
                </a>

                {{ form_start(form, {'attr': {'class': 'admin-form'}}) }}
                    <div class="form-group">
                        {{ form_label(form.title) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Event Title'}}) }}
                        {{ form_errors(form.title) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.game) }}
                        {{ form_widget(form.game, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.game) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.date) }}
                        {{ form_widget(form.date, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                        {{ form_errors(form.date) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.maxPlayers) }}
                        {{ form_widget(form.maxPlayers, {'attr': {'class': 'form-control', 'type': 'number', 'min': '1'}}) }}
                        {{ form_errors(form.maxPlayers) }}
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-admin">
                            <i class="fas fa-save"></i>
                            Save Changes
                        </button>
                        <a href="{{ path('admin_events') }}" class="btn btn-outline">
                            Cancel
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
</div>

<style>
.admin-form {
    max-width: 600px;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--accent-purple);
    font-weight: 600;
}

.form-control {
    width: 100%;
    background: var(--tertiary-dark);
    border: 1px solid var(--accent-purple);
    border-radius: 6px;
    padding: 0.75rem 1rem;
    color: var(--text-primary);
    font-family: inherit;
    font-size: 1rem;
}

.form-control:focus {
    outline: none;
    border-color: var(--accent-cyan);
    box-shadow: 0 0 0 2px rgba(139, 92, 246, 0.2);
}

.form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
}

.btn-outline {
    background: transparent;
    border: 1px solid var(--accent-purple);
    color: var(--accent-purple);
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.3s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
}

.btn-outline:hover {
    background: rgba(139, 92, 246, 0.1);
    border-color: var(--accent-cyan);
    color: var(--accent-cyan);
}
</style>
{% endblock %}
