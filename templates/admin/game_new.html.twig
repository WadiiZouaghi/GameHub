{% extends 'admin.html.twig' %}

{% block title %}Create Game - GameHub Admin{% endblock %}

{% block body %}
<div class="admin-main-wrapper">
    <aside class="admin-sidebar-nav">
        <div class="admin-sidebar-header">
            <h2>GameHub Admin</h2>
        </div>
        <nav class="admin-sidebar-menu">
            <div class="sidebar-section">
                <div class="sidebar-section-title">MAIN</div>
                <a href="{{ path('admin_dashboard') }}" class="admin-menu-item">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>
                <a href="{{ path('admin_games') }}" class="admin-menu-item active">
                    <i class="fas fa-gamepad"></i>
                    Games
                </a>
                <a href="{{ path('admin_users') }}" class="admin-menu-item">
                    <i class="fas fa-users"></i>
                    Users
                </a>
                <a href="{{ path('admin_events') }}" class="admin-menu-item">
                    <i class="fas fa-calendar-alt"></i>
                    Events
                </a>
                <a href="{{ path('admin_reviews') }}" class="admin-menu-item">
                    <i class="fas fa-star"></i>
                    Reviews
                </a>
            </div>
        </nav>
    </aside>

    <main class="admin-main">
        <div class="admin-main-content">
            <div class="admin-header">
                <div class="admin-welcome">
                    <div class="admin-avatar">
                        <i class="fas fa-gamepad"></i>
                    </div>
                    <div class="welcome-content">
                        <h1>Create New Game</h1>
                        <p>Add a new game to the system</p>
                    </div>
                </div>
            </div>

            <div class="admin-section">
                <div class="section-header">
                    <h2>
                        <i class="fas fa-plus"></i>
                        Game Details
                    </h2>
                    <a href="{{ path('admin_games') }}" class="btn btn-secondary btn-small">
                        <i class="fas fa-arrow-left"></i>
                        Back to Games
                    </a>
                </div>

                {{ form_start(form, {'attr': {'class': 'admin-form', 'enctype': 'multipart/form-data'}}) }}
                    <!-- Basic Info -->
                    <div class="form-section">
                        <h3 class="form-section-title">Basic Information</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                {{ form_label(form.title) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.title) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.category) }}
                                {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.category) }}
                            </div>

                            <div class="form-group form-group-full">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                    </div>

                    <!-- Game Details -->
                    <div class="form-section">
                        <h3 class="form-section-title">Game Details</h3>
                        <div class="form-grid">
                            <div class="form-group">
                                {{ form_label(form.developer) }}
                                {{ form_widget(form.developer, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.developer) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.price) }}
                                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.price) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.platform) }}
                                {{ form_widget(form.platform, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.platform) }}
                            </div>

                            <div class="form-group">
                                {{ form_label(form.languages) }}
                                {{ form_widget(form.languages, {'attr': {'class': 'form-control', 'rows': '2'}}) }}
                                {{ form_errors(form.languages) }}
                            </div>
                        </div>
                    </div>

                    <!-- Media -->
                    <div class="form-section">
                        <h3 class="form-section-title">Game Media</h3>
                        <div class="form-grid">
                            <div class="form-group form-group-full">
                                {{ form_label(form.coverImage) }}
                                <div class="file-upload-container">
                                    <div class="file-upload-area">
                                        <div class="upload-icon">
                                            <i class="fas fa-image"></i>
                                        </div>
                                        <div class="upload-text">
                                            <strong>Drop image here or click to browse</strong>
                                            <p>PNG, JPG, GIF up to 10MB</p>
                                        </div>
                                        {{ form_widget(form.coverImage, {'attr': {'class': 'file-input'}}) }}
                                    </div>
                                    <div class="upload-preview" id="image-preview" style="display: none;">
                                        <img id="preview-img" src="" alt="Preview" style="max-width: 200px; max-height: 200px; border-radius: 8px;">
                                    </div>
                                </div>
                                {{ form_errors(form.coverImage) }}
                            </div>

                            <div class="form-group form-group-full">
                                {{ form_label(form.gallery) }}
                                <div class="file-upload-container">
                                    <div class="file-upload-area">
                                        <div class="upload-icon">
                                            <i class="fas fa-images"></i>
                                        </div>
                                        <div class="upload-text">
                                            <strong>Drop images here or click to browse</strong>
                                            <p>PNG, JPG, GIF up to 10MB each (multiple allowed)</p>
                                        </div>
                                        {{ form_widget(form.gallery, {'attr': {'class': 'file-input'}}) }}
                                    </div>
                                </div>
                                {{ form_errors(form.gallery) }}
                            </div>
                        </div>
                    </div>

                    <!-- System Requirements -->
                    <div class="form-section">
                        <h3 class="form-section-title">System Requirements</h3>
                        
                        <div class="requirement-subsection">
                            <h4>Minimum Requirements</h4>
                            <div class="form-grid">
                                <div class="form-group">
                                    {{ form_label(form.minOs) }}
                                    {{ form_widget(form.minOs, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.minOs) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.minProcessor) }}
                                    {{ form_widget(form.minProcessor, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.minProcessor) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.minMemory) }}
                                    {{ form_widget(form.minMemory, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.minMemory) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.minGraphics) }}
                                    {{ form_widget(form.minGraphics, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.minGraphics) }}
                                </div>
                                <div class="form-group form-group-full">
                                    {{ form_label(form.minStorage) }}
                                    {{ form_widget(form.minStorage, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.minStorage) }}
                                </div>
                            </div>
                        </div>

                        <div class="requirement-subsection">
                            <h4>Recommended Requirements</h4>
                            <div class="form-grid">
                                <div class="form-group">
                                    {{ form_label(form.recOs) }}
                                    {{ form_widget(form.recOs, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.recOs) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.recProcessor) }}
                                    {{ form_widget(form.recProcessor, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.recProcessor) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.recMemory) }}
                                    {{ form_widget(form.recMemory, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.recMemory) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.recGraphics) }}
                                    {{ form_widget(form.recGraphics, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.recGraphics) }}
                                </div>
                                <div class="form-group form-group-full">
                                    {{ form_label(form.recStorage) }}
                                    {{ form_widget(form.recStorage, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.recStorage) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i>
                            Create Game
                        </button>
                        <a href="{{ path('admin_games') }}" class="btn btn-secondary">
                            Cancel
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
</div>

<style>
.admin-form {
    max-width: none;
}

.form-section {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--gray-100);
}

.form-section:last-of-type {
    border-bottom: none;
}

.form-section-title {
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--white);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.requirement-subsection {
    margin-bottom: 2rem;
}

.requirement-subsection h4 {
    margin-bottom: 1rem;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--gray-300);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
}

.form-group-full {
    grid-column: 1 / -1;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--white);
    font-weight: 600;
    font-size: 0.9rem;
}

.form-control {
    width: 100%;
    background: var(--dark-gray);
    border: 1px solid var(--gray-200);
    border-radius: 8px;
    padding: 0.875rem 1rem;
    color: var(--white);
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
    transition: all 0.2s ease;
}

.form-control:focus {
    outline: none;
    border-color: var(--neon-accent);
    box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
}

.form-control[rows] {
    resize: vertical;
    min-height: 100px;
}

.file-upload-container {
    position: relative;
}

.file-upload-area {
    border: 2px dashed var(--gray-300);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    background: var(--dark-gray);
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.file-upload-area:hover {
    border-color: var(--neon-accent);
    background: rgba(0, 212, 255, 0.05);
}

.upload-icon {
    font-size: 3rem;
    color: var(--gray-400);
    margin-bottom: 1rem;
}

.upload-text strong {
    display: block;
    color: var(--white);
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
}

.upload-text p {
    color: var(--gray-400);
    margin: 0;
    font-size: 0.9rem;
}

.file-input {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
}

.upload-preview {
    margin-top: 1rem;
    text-align: center;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    padding-top: 2rem;
    border-top: 1px solid var(--gray-100);
}

.btn-admin {
    background: var(--neon-accent);
    color: var(--black);
    border: 1px solid var(--neon-accent);
    padding: 0.875rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
}

.btn-admin:hover {
    background: var(--white);
    color: var(--black);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(0, 212, 255, 0.3);
}

@media (max-width: 768px) {
    .form-grid {
        grid-template-columns: 1fr;
    }

    .form-actions {
        flex-direction: column;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const fileInput = document.querySelector('.file-input');
    const uploadArea = document.querySelector('.file-upload-area');
    const preview = document.getElementById('image-preview');
    const previewImg = document.getElementById('preview-img');

    if (fileInput) {
        fileInput.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });

        // Drag and drop functionality
        uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--neon-accent)';
            uploadArea.style.background = 'rgba(0, 212, 255, 0.1)';
        });

        uploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--gray-300)';
            uploadArea.style.background = 'var(--dark-gray)';
        });

        uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            uploadArea.style.borderColor = 'var(--gray-300)';
            uploadArea.style.background = 'var(--dark-gray)';

            const files = e.dataTransfer.files;
            if (files.length > 0) {
                fileInput.files = files;
                const event = new Event('change');
                fileInput.dispatchEvent(event);
            }
        });
    }
});
</script>
{% endblock %}
