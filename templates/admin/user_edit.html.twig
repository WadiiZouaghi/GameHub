{% extends 'admin.html.twig' %}

{% block title %}Edit User - GameHub Admin{% endblock %}

{% block body %}
<div class="admin-main-wrapper">
    <aside class="admin-sidebar-nav">
        <div class="admin-sidebar-header">
            <h2>GameHub Admin</h2>
        </div>
        <nav class="admin-sidebar-menu">
            <div class="sidebar-section">
                <div class="sidebar-section-title">MAIN</div>
                <a href="{{ path('admin_dashboard') }}" class="admin-menu-item">
                    <i class="fas fa-tachometer-alt"></i>
                    Dashboard
                </a>
                <a href="{{ path('admin_games') }}" class="admin-menu-item">
                    <i class="fas fa-gamepad"></i>
                    Games
                </a>
                <a href="{{ path('admin_users') }}" class="admin-menu-item active">
                    <i class="fas fa-users"></i>
                    Users
                </a>
                <a href="{{ path('admin_reservations') }}" class="admin-menu-item">
                    <i class="fas fa-ticket-alt"></i>
                    Reservations
                </a>
                <a href="{{ path('admin_events') }}" class="admin-menu-item">
                    <i class="fas fa-calendar-alt"></i>
                    Events
                </a>
                <a href="{{ path('admin_reviews') }}" class="admin-menu-item">
                    <i class="fas fa-star"></i>
                    Reviews
                </a>
            </div>
        </nav>
    </aside>

    <main class="admin-main">
        <div class="admin-main-content">
            <div class="admin-header">
                <div class="admin-welcome">
                    <div class="admin-avatar">
                        <i class="fas fa-user-edit"></i>
                    </div>
                    <div class="welcome-content">
                        <h1>Edit User</h1>
                        <p>Update user details and permissions</p>
                    </div>
                </div>
            </div>

            <div class="admin-section">
                <div class="section-header">
                    <h2>
                        <i class="fas fa-user-edit"></i>
                        User Details
                    </h2>
                    <a href="{{ path('admin_users') }}" class="btn btn-secondary btn-small">
                        <i class="fas fa-arrow-left"></i>
                        Back to Users
                    </a>
                </div>

                {{ form_start(form, {'attr': {'class': 'admin-form'}}) }}
                    <div class="form-grid">
                        <div class="form-group">
                            {{ form_label(form.username) }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.username) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="form-group form-group-full">
                            {{ form_label(form.bio) }}
                            {{ form_widget(form.bio, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                            {{ form_errors(form.bio) }}
                        </div>

                        <div class="form-group form-group-full">
                            {{ form_label(form.roles) }}
                            <div class="roles-container">
                                {{ form_widget(form.roles, {'attr': {'class': 'form-control roles-select'}}) }}
                                <div class="roles-info">
                                    <small>Hold Ctrl/Cmd to select multiple roles</small>
                                </div>
                            </div>
                            {{ form_errors(form.roles) }}
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i>
                            Save Changes
                        </button>
                        <a href="{{ path('admin_users') }}" class="btn btn-secondary">
                            Cancel
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </main>
</div>

<style>
.admin-form {
    max-width: none;
}

.form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.form-group-full {
    grid-column: 1 / -1;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--white);
    font-weight: 600;
    font-size: 0.9rem;
}

.form-control {
    width: 100%;
    background: var(--dark-gray);
    border: 1px solid var(--gray-200);
    border-radius: 8px;
    padding: 0.875rem 1rem;
    color: var(--white);
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
    transition: all 0.2s ease;
}

.form-control:focus {
    outline: none;
    border-color: var(--neon-accent);
    box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
}

.form-control[rows] {
    resize: vertical;
    min-height: 100px;
}

.roles-container {
    position: relative;
}

.roles-select {
    min-height: 120px;
    background: var(--dark-gray);
    border: 1px solid var(--gray-200);
    border-radius: 8px;
    padding: 0.5rem;
    color: var(--white);
    font-family: 'Inter', sans-serif;
    font-size: 0.95rem;
}

.roles-select:focus {
    outline: none;
    border-color: var(--neon-accent);
    box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
}

.roles-select option {
    background: var(--dark-gray);
    color: var(--white);
    padding: 0.5rem;
}

.roles-info {
    margin-top: 0.5rem;
}

.roles-info small {
    color: var(--gray-400);
    font-size: 0.8rem;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    padding-top: 2rem;
    border-top: 1px solid var(--gray-100);
}

.btn-admin {
    background: var(--neon-accent);
    color: var(--black);
    border: 1px solid var(--neon-accent);
    padding: 0.875rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
}

.btn-admin:hover {
    background: var(--white);
    color: var(--black);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(0, 212, 255, 0.3);
}

@media (max-width: 768px) {
    .form-grid {
        grid-template-columns: 1fr;
    }

    .form-actions {
        flex-direction: column;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }
}
</style>
{% endblock %}
