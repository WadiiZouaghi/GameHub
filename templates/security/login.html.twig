{% extends 'base.html.twig' %}

{% block title %}Login - GameHub{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center px-4 py-12">
        <div class="login-container">
        <h1 class="login-title">
            <i class="fas fa-sign-in-alt"></i>
            Welcome Back
        </h1>

        {% if error %}
            <div class="alert alert-error">
                <i class="fas fa-exclamation-triangle"></i>
                <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
            </div>
        {% endif %}

        <form method="post" class="login-form">
            <div class="form-group">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" required autofocus>
            </div>

            <div class="form-group">
                <label for="inputPassword" class="form-label">Password</label>
                <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <div class="checkbox-group">
                <input type="checkbox" id="remember_me" name="_remember_me">
                <label for="remember_me">Remember me</label>
            </div>

            <button class="btn" type="submit">
                <i class="fas fa-sign-in-alt"></i>
                Sign In
            </button>
        </form>

        <div class="login-links">
            <a href="{{ path('app_register') }}">Don't have an account? Sign up here</a>
        </div>
        </div>
    </div>

{% endblock %}
