{% extends 'base.html.twig' %}

{% block title %}Profile Settings - GameHub{% endblock %}

{% block body %}
<div class="container mx-auto px-4 pt-24 pb-20 max-w-3xl">
    <!-- Page Header -->
    <div class="mb-12">
        <div class="flex items-center justify-between gap-6 mb-8">
            <div>
                <h1 class="font-orbitron text-4xl md:text-5xl font-bold mb-2 text-gradient">Profile Settings</h1>
                <p class="text-muted-foreground">Update your personal information and preferences</p>
            </div>
            <a href="{{ path('user_dashboard') }}" class="btn-gaming flex items-center gap-2">
                <i class="fas fa-arrow-left"></i>
                Back
            </a>
        </div>
    </div>

    <!-- Profile Form -->
    <div class="card-gaming p-8 mb-12">
        <div class="flex items-center gap-6 mb-8 pb-8 border-b border-border">
            {% if user.avatar %}
                <img src="{{ asset(user.avatar) }}" alt="Avatar" class="w-24 h-24 rounded-full border-2 border-primary">
            {% else %}
                <div class="w-24 h-24 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-orbitron font-bold text-3xl border-2 border-primary">
                    {{ user.username|first|upper }}
                </div>
            {% endif %}
            <div>
                <h2 class="font-orbitron text-2xl font-bold text-foreground mb-1">{{ user.username }}</h2>
                <p class="text-sm text-muted-foreground">{{ user.email }}</p>
                <p class="text-xs text-muted-foreground mt-2">
                    Member since {{ user.createdAt|date('F j, Y') }}
                </p>
            </div>
        </div>

        {{ form_start(profileForm, {'attr': {'class': 'space-y-6'}}) }}

            <!-- Basic Information Section -->
            <div>
                <h3 class="font-orbitron text-lg font-bold text-foreground mb-4">Basic Information</h3>
                <div class="space-y-4">
                    <div>
                        {{ form_label(profileForm.username, null, {'label_attr': {'class': 'block text-sm font-orbitron font-semibold text-foreground mb-2'}}) }}
                        {{ form_widget(profileForm.username, {'attr': {'class': 'w-full bg-muted border border-border rounded-lg px-4 py-2 text-foreground font-rajdhani focus:outline-none focus:border-primary'}}) }}
                        {{ form_errors(profileForm.username, {'attr': {'class': 'mt-1 text-xs text-red-400'}}) }}
                    </div>

                    <div>
                        {{ form_label(profileForm.email, null, {'label_attr': {'class': 'block text-sm font-orbitron font-semibold text-foreground mb-2'}}) }}
                        {{ form_widget(profileForm.email, {'attr': {'class': 'w-full bg-muted border border-border rounded-lg px-4 py-2 text-foreground font-rajdhani focus:outline-none focus:border-primary'}}) }}
                        {{ form_errors(profileForm.email, {'attr': {'class': 'mt-1 text-xs text-red-400'}}) }}
                    </div>

                    <div>
                        {{ form_label(profileForm.bio, 'About You', {'label_attr': {'class': 'block text-sm font-orbitron font-semibold text-foreground mb-2'}}) }}
                        {{ form_widget(profileForm.bio, {'attr': {'class': 'w-full bg-muted border border-border rounded-lg px-4 py-2 text-foreground font-rajdhani focus:outline-none focus:border-primary min-h-24', 'placeholder': 'Tell other gamers about yourself...'}}) }}
                        <small class="block mt-1 text-xs text-muted-foreground">Maximum 500 characters</small>
                        {{ form_errors(profileForm.bio, {'attr': {'class': 'mt-1 text-xs text-red-400'}}) }}
                    </div>
                </div>
            </div>

            <!-- Profile Picture Section -->
            <div class="border-t border-border pt-6">
                <h3 class="font-orbitron text-lg font-bold text-foreground mb-4">Profile Picture</h3>
                
                <div class="mb-6">
                    {{ form_label(profileForm.avatar, null, {'label_attr': {'class': 'block text-sm font-orbitron font-semibold text-foreground mb-2'}}) }}
                    {{ form_widget(profileForm.avatar, {'attr': {'class': 'w-full'}}) }}
                    <small class="block mt-2 text-xs text-muted-foreground">
                        Supported formats: JPEG, PNG, GIF, WebP (Max 2MB)
                    </small>
                    {{ form_errors(profileForm.avatar, {'attr': {'class': 'mt-1 text-xs text-red-400'}}) }}
                </div>
            </div>

            <!-- Form Actions -->
            <div class="border-t border-border pt-6 flex gap-3">
                <button type="submit" class="btn-hero flex items-center gap-2 flex-1 justify-center">
                    <i class="fas fa-save"></i>
                    Save Changes
                </button>
                <a href="{{ path('user_dashboard') }}" class="btn-gaming flex items-center gap-2 flex-1 justify-center">
                    <i class="fas fa-times"></i>
                    Cancel
                </a>
            </div>

        {{ form_end(profileForm) }}
    </div>

    <!-- Account Info -->
    <div class="card-gaming p-8">
        <h3 class="font-orbitron text-lg font-bold text-foreground mb-4">
            <i class="fas fa-info-circle text-primary mr-2"></i>Account Information
        </h3>
        <div class="space-y-3 text-sm">
            <div class="flex justify-between">
                <span class="text-muted-foreground">Account Created:</span>
                <span class="text-foreground font-semibold">{{ user.createdAt|date('F j, Y \\a\\t g:i A') }}</span>
            </div>
            <div class="flex justify-between">
                <span class="text-muted-foreground">Reviews Written:</span>
                <span class="text-foreground font-semibold">{{ user.reviews|length }}</span>
            </div>
            <div class="flex justify-between">
                <span class="text-muted-foreground">Account Status:</span>
                <span class="text-primary font-semibold uppercase">Active</span>
            </div>
        </div>
    </div>
</div>
{% endblock %}
