{% extends 'base.html.twig' %}

{% block title %}Dashboard - GameHub{% endblock %}

{% block body %}
<div class="container mx-auto px-4 pt-24 pb-20">
    <!-- User Header -->
    <div class="card-gaming p-8 mb-12">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
            <!-- User Info -->
            <div class="flex items-center gap-6">
                {% if user.avatar %}
                    <img src="{{ asset(user.avatar) }}" alt="Avatar" class="w-20 h-20 rounded-full border-2 border-primary">
                {% else %}
                    <div class="w-20 h-20 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-orbitron font-bold text-2xl border-2 border-primary">
                        {{ user.username|first|upper }}
                    </div>
                {% endif %}
                <div>
                    <h1 class="font-orbitron text-3xl font-bold text-foreground">{{ user.username }}</h1>
                    <div class="flex gap-4 mt-2">
                        <div class="text-sm">
                            <div class="text-muted-foreground">Reviews</div>
                            <div class="text-primary font-bold">{{ user.reviews|length }}</div>
                        </div>
                        <div class="text-sm">
                            <div class="text-muted-foreground">Purchases</div>
                            <div class="text-primary font-bold">{{ user.purchases|length }}</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="flex flex-col sm:flex-row gap-3">
                <a href="{{ path('game_index') }}" class="btn-hero flex items-center gap-2 justify-center">
                    <i class="fas fa-shopping-cart"></i>
                    Browse Games
                </a>
                <a href="{{ path('user_profile') }}" class="btn-gaming flex items-center gap-2 justify-center">
                    <i class="fas fa-cog"></i>
                    Settings
                </a>
            </div>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="card-gaming p-6">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-lg bg-secondary/20 flex items-center justify-center">
                    <i class="fas fa-star text-secondary text-xl"></i>
                </div>
                <div>
                    <div class="text-xs text-muted-foreground uppercase tracking-wider">Reviews Given</div>
                    <div class="text-2xl font-orbitron font-bold text-foreground">{{ user.reviews|length }}</div>
                </div>
            </div>
        </div>

        <div class="card-gaming p-6">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center">
                    <i class="fas fa-gamepad text-primary text-xl"></i>
                </div>
                <div>
                    <div class="text-xs text-muted-foreground uppercase tracking-wider">Games Owned</div>
                    <div class="text-2xl font-orbitron font-bold text-foreground">{{ user.purchases|length }}</div>
                </div>
            </div>
        </div>

        <div class="card-gaming p-6">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-lg bg-primary/20 flex items-center justify-center">
                    <i class="fas fa-calendar text-primary text-xl"></i>
                </div>
                <div>
                    <div class="text-xs text-muted-foreground uppercase tracking-wider">Member Since</div>
                    <div class="text-2xl font-orbitron font-bold text-foreground">{{ user.createdAt|date('M Y')|upper }}</div>
                </div>
            </div>
        </div>
    </div>



    <!-- Recent Activity -->
    <div>
        <h2 class="font-orbitron text-2xl font-bold text-foreground mb-6">
            <i class="fas fa-bolt text-primary mr-3"></i>Activity Feed
        </h2>

        {% if user.reviews|length > 0 %}
            <div class="space-y-3">
                {% for review in user.reviews|slice(0, 5) %}
                    <div class="card-gaming p-4 flex items-center gap-4">
                        <div class="w-10 h-10 rounded-lg bg-yellow-500/20 flex items-center justify-center">
                            <i class="fas fa-star text-yellow-500"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-foreground font-rajdhani">You reviewed <span class="text-primary font-bold">{{ review.game.title }}</span></p>
                            <p class="text-xs text-muted-foreground">{{ review.createdAt ? review.createdAt|date('M j, Y \\a\\t g:i A') : 'Recently' }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="card-gaming p-12 text-center">
                <i class="fas fa-inbox text-4xl text-muted-foreground mb-3 opacity-50"></i>
                <p class="text-muted-foreground">No activity yet. Start exploring games!</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
