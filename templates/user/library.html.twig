{% extends 'base.html.twig' %}

{% block title %}My Game Library{% endblock %}

{% block body %}
<div class="library-container">
    <div class="library-header">
        <h1>My Game Library</h1>
        <p class="library-count">{{ purchases|length }} games owned</p>
    </div>

    {% if purchases is empty %}
        <div class="empty-library">
            <div class="empty-icon">ðŸŽ®</div>
            <h2>Your library is empty</h2>
            <p>Start building your collection by purchasing games from our store!</p>
            <a href="{{ path('game_index') }}" class="btn btn-primary">Browse Games</a>
        </div>
    {% else %}
        <div class="games-grid">
            {% for purchase in purchases %}
                <div class="game-card library-card">
                    <div class="game-cover">
                        {% if purchase.game.coverImage %}
                            <img src="{{ asset('uploads/covers/' ~ purchase.game.coverImage) }}" alt="{{ purchase.game.title }}">
                        {% else %}
                            <div class="no-cover">ðŸŽ®</div>
                        {% endif %}
                    </div>
                    <div class="game-info">
                        <h3>{{ purchase.game.title }}</h3>
                        <p class="game-genre">{{ purchase.game.category }}</p>
                        <div class="purchase-info">
                            <small>Purchased: {{ purchase.purchaseDate|date('M j, Y') }}</small>
                        </div>
                        <div class="game-actions">
                            <a href="{{ path('game_show', {'id': purchase.game.id}) }}" class="btn btn-secondary btn-sm">View Details</a>
                            {% if purchase.game.reviews|length == 0 %}
                                <a href="{{ path('game_show', {'id': purchase.game.id}) }}#review-section" class="btn btn-outline-primary btn-sm">Write Review</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<style>
.library-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

.library-header {
    text-align: center;
    margin-bottom: 40px;
}

.library-header h1 {
    color: #fff;
    font-size: 2.5rem;
    margin-bottom: 10px;
}

.library-count {
    color: #888;
    font-size: 1.1rem;
}

.empty-library {
    text-align: center;
    padding: 80px 20px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    margin: 40px 0;
}

.empty-icon {
    font-size: 4rem;
    margin-bottom: 20px;
}

.empty-library h2 {
    color: #fff;
    margin-bottom: 10px;
}

.empty-library p {
    color: #888;
    margin-bottom: 30px;
}

.games-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
}

.game-card {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.game-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
}

.game-cover {
    height: 200px;
    overflow: hidden;
    position: relative;
}

.game-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.no-cover {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    font-size: 3rem;
}

.game-info {
    padding: 20px;
}

.game-info h3 {
    color: #fff;
    margin: 0 0 8px 0;
    font-size: 1.2rem;
}

.game-genre {
    color: #4CAF50;
    font-size: 0.9rem;
    margin-bottom: 10px;
}

.purchase-info {
    margin-bottom: 15px;
}

.purchase-info small {
    color: #888;
}

.game-actions {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}

.btn {
    padding: 8px 16px;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    cursor: pointer;
}

.btn-primary {
    background: #007bff;
    color: white;
}

.btn-primary:hover {
    background: #0056b3;
}

.btn-secondary {
    background: #6c757d;
    color: white;
}

.btn-secondary:hover {
    background: #545b62;
}

.btn-outline-primary {
    background: transparent;
    color: #007bff;
    border: 1px solid #007bff;
}

.btn-outline-primary:hover {
    background: #007bff;
    color: white;
}

.btn-sm {
    padding: 6px 12px;
    font-size: 0.8rem;
}
</style>
{% endblock %}
