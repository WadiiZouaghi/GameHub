                                        {% for i in 1..5 %}
                                            {% if i <= review.rating %}
                                                <i class="fas fa-star text-yellow-400 text-sm"></i>
                                            {% else %}
                                                <i class="far fa-star text-yellow-400/40 text-sm"></i>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="text-sm text-muted-foreground font-rajdhani">{{ review.createdAt|date('M j, Y') }}</div>
                            </div>
                            <p class="text-foreground font-rajdhani leading-relaxed">{{ review.comment }}</p>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="card-gaming p-16 text-center rounded-xl shadow-md">
                    <i class="fas fa-comments text-6xl text-muted-foreground mb-5 opacity-20"></i>
                    <p class="text-muted-foreground text-lg font-rajdhani">No reviews yet. Be the first to review!</p>
                </div>
            {% endif %}
        </div>
    </div>

    <!-- RELATED GAMES -->
    {% if relatedGames %}
        <div class="py-16">
            <div class="container mx-auto px-4">
                <div class="mb-10">
                    <h2 class="font-orbitron text-3xl font-bold text-foreground">You Might Also Like</h2>
                    <div class="h-1 w-16 bg-gradient-to-r from-primary to-secondary mt-3 rounded-full"></div>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                    {% for game in relatedGames %}
                        <a href="{{ path('game_show', {id: game.id}) }}" class="card-gaming overflow-hidden group hover:border-primary transition-all rounded-xl shadow-lg hover:shadow-xl hover:shadow-primary/20">
                            {% if game.coverImage %}
                                <img src="{{ asset(game.coverImage) }}" alt="{{ game.title }}" class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-500">
                            {% else %}
                                <div class="w-full h-48 bg-muted flex items-center justify-center text-4xl">ðŸŽ®</div>
                            {% endif %}
                            <div class="p-5">
                                <h3 class="font-orbitron font-bold text-foreground group-hover:text-primary transition-colors line-clamp-2 text-sm">{{ game.title }}</h3>
                                <p class="text-xs text-muted-foreground mt-3 font-rajdhani">{{ game.category }}</p>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>

{% endblock %}
