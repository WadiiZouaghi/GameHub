<!-- MEDIA GALLERY -->
{% if game.gallery and game.gallery|length > 0 %}
    <div class="border-b border-border/50 py-16">
        <div class="container mx-auto px-4">
            <div class="mb-10">
                <h2 class="font-orbitron text-3xl font-bold text-foreground">Game Gallery</h2>
                <div class="h-1 w-16 bg-gradient-to-r from-primary to-secondary mt-3 rounded-full"></div>
            </div>
            
            <div class="relative">
                <!-- Gallery Carousel -->
                <div class="gallery-carousel overflow-x-auto overflow-y-hidden pb-4 scroll-smooth" id="gameGallery">
                    <div class="flex transition-transform duration-500 ease-out" id="galleryTrack">
                        {% for item in game.gallery %}
                            {% if item %}
                                <div class="min-w-[calc(33.333%-1rem)] flex-shrink-0 px-2">
                                    <div class="rounded-xl overflow-hidden hover:shadow-2xl hover:shadow-primary/30 transition-all group cursor-pointer h-48 border border-primary/10">
                                        <img src="{{ asset(item) }}" alt="Gallery Image" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>

                <!-- Navigation Buttons -->
                {% if game.gallery|length > 3 %}
                    <button id="prevBtn" class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4 z-10 bg-primary hover:bg-primary/80 text-white rounded-full w-14 h-14 flex items-center justify-center transition-all shadow-lg shadow-primary/40">
                        <i class="fas fa-chevron-left text-xl"></i>
                    </button>
                    <button id="nextBtn" class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-4 z-10 bg-primary hover:bg-primary/80 text-white rounded-full w-14 h-14 flex items-center justify-center transition-all shadow-lg shadow-primary/40">
                        <i class="fas fa-chevron-right text-xl"></i>
                    </button>
                {% endif %}

                <!-- Pagination Dots -->
                {% if game.gallery|length > 3 %}
                    <div class="flex justify-center gap-2 mt-8">
                        {% set totalItems = game.gallery|length %}
                        {% for i in range(0, totalItems - 3) %}
                            <button class="gallery-dot w-2 h-2 rounded-full transition-all {% if i == 0 %}bg-primary w-6{% else %}bg-muted-foreground/40 hover:bg-muted-foreground/60{% endif %}" data-index="{{ i }}"></button>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const gallery = document.getElementById('gameGallery');
            const track = document.getElementById('galleryTrack');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            const dots = document.querySelectorAll('.gallery-dot');
            
            let currentIndex = 0;
            const itemWidth = track.children[0]?.offsetWidth || 0;
            const totalItems = track.children.length;
            const itemsPerView = 3;
            const maxIndex = Math.max(0, totalItems - itemsPerView);

            function updateCarousel() {
                const offset = currentIndex * itemWidth;
                track.style.transform = `translateX(-${offset}px)`;
                
                dots.forEach((dot, index) => {
                    dot.classList.toggle('bg-primary', index === currentIndex);
                    dot.classList.toggle('w-6', index === currentIndex);
                    dot.classList.toggle('bg-muted-foreground/40', index !== currentIndex);
                });
            }

            if (prevBtn) {
                prevBtn.addEventListener('click', () => {
                    currentIndex = Math.max(0, currentIndex - 1);
                    updateCarousel();
                });
            }

            if (nextBtn) {
                nextBtn.addEventListener('click', () => {
                    currentIndex = Math.min(maxIndex, currentIndex + 1);
                    updateCarousel();
                });
            }

            dots.forEach(dot => {
                dot.addEventListener('click', () => {
                    currentIndex = parseInt(dot.dataset.index);
                    updateCarousel();
                });
            });

            let touchStartX = 0;
            let touchEndX = 0;

            gallery.addEventListener('touchstart', (e) => {
                touchStartX = e.changedTouches[0].screenX;
            }, false);

            gallery.addEventListener('touchend', (e) => {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            }, false);

            function handleSwipe() {
                const swipeThreshold = 50;
                const diff = touchStartX - touchEndX;

                if (Math.abs(diff) > swipeThreshold) {
                    if (diff > 0) {
                        currentIndex = Math.min(maxIndex, currentIndex + 1);
                    } else {
                        currentIndex = Math.max(0, currentIndex - 1);
                    }
                    updateCarousel();
                }
            }
        });
    </script>
