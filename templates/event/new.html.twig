{% extends 'base.html.twig' %}

{% block title %}Create Event - GameHub{% endblock %}

{% block body %}
<div class="container mx-auto px-4 pt-24 pb-20">
    <div class="max-w-2xl mx-auto">
        <!-- Header -->
        <div class="mb-12">
            <h1 class="font-orbitron text-4xl font-bold text-foreground mb-4">
                <span class="text-gradient">Create</span> New Event
            </h1>
            <p class="text-muted-foreground">Set up an exciting gaming event for the community</p>
        </div>

        <!-- Form Card -->
        <div class="card-gaming p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

                <!-- Title -->
                <div>
                    {{ form_label(form.title, 'Event Title', {'label_attr': {'class': 'block text-sm font-rajdhani font-semibold text-foreground mb-2'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-3 bg-card border border-border rounded-lg text-foreground focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary/50 transition', 'placeholder': 'Enter event title'}}) }}
                    {% if form.title.vars.errors %}
                        <div class="mt-1 text-destructive text-sm">
                            {{ form_errors(form.title) }}
                        </div>
                    {% endif %}
                </div>

                <!-- Game -->
                <div>
                    {{ form_label(form.game, 'Game', {'label_attr': {'class': 'block text-sm font-rajdhani font-semibold text-foreground mb-2'}}) }}
                    {{ form_widget(form.game, {'attr': {'class': 'w-full px-4 py-3 bg-card border border-border rounded-lg text-foreground focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary/50 transition'}}) }}
                    {% if form.game.vars.errors %}
                        <div class="mt-1 text-destructive text-sm">
                            {{ form_errors(form.game) }}
                        </div>
                    {% endif %}
                </div>

                <!-- Date & Time -->
                <div>
                    {{ form_label(form.date, 'Event Date & Time', {'label_attr': {'class': 'block text-sm font-rajdhani font-semibold text-foreground mb-2'}}) }}
                    {{ form_widget(form.date, {'attr': {'class': 'w-full px-4 py-3 bg-card border border-border rounded-lg text-foreground focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary/50 transition'}}) }}
                    {% if form.date.vars.errors %}
                        <div class="mt-1 text-destructive text-sm">
                            {{ form_errors(form.date) }}
                        </div>
                    {% endif %}
                </div>

                <!-- Max Players -->
                <div>
                    {{ form_label(form.maxPlayers, 'Max Players', {'label_attr': {'class': 'block text-sm font-rajdhani font-semibold text-foreground mb-2'}}) }}
                    {{ form_widget(form.maxPlayers, {'attr': {'class': 'w-full px-4 py-3 bg-card border border-border rounded-lg text-foreground focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary/50 transition', 'placeholder': 'Maximum number of players', 'min': '2'}}) }}
                    {% if form.maxPlayers.vars.errors %}
                        <div class="mt-1 text-destructive text-sm">
                            {{ form_errors(form.maxPlayers) }}
                        </div>
                    {% endif %}
                </div>

                <!-- Buttons -->
                <div class="flex gap-4 pt-6 border-t border-border">
                    <button class="flex-1 btn-hero flex items-center justify-center gap-2" type="submit">
                        <i class="fas fa-calendar-plus"></i>
                        Create Event
                    </button>
                    <a href="{{ path('event_index') }}" class="flex-1 btn-gaming flex items-center justify-center gap-2">
                        <i class="fas fa-arrow-left"></i>
                        Cancel
                    </a>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
