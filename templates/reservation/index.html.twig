{% extends 'base.html.twig' %}

{% block title %}My Reservations - GameHub{% endblock %}

{% block body %}
<div class="container mx-auto px-4 pt-24 pb-20">
    <!-- Page Header -->
    <div class="mb-12">
        <h1 class="font-orbitron text-4xl md:text-5xl font-bold mb-3">
            <span class="text-foreground">My</span>
            <span class="text-gradient">Reservations</span>
        </h1>
        <p class="text-muted-foreground max-w-md">
            {% if is_granted('ROLE_ADMIN') %}
                Manage all user reservations in the system
            {% else %}
                View and manage your game reservations
            {% endif %}
        </p>
    </div>

    <!-- Reservations List -->
    {% if reservations|length > 0 %}
        <div class="space-y-4">
            {% for reservation in reservations %}
                <div class="card-gaming p-6 hover:border-primary/50 transition-all">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 items-center">
                        <!-- Game Info -->
                        <div class="md:col-span-2 flex items-center gap-4">
                            {% if reservation.game.coverImage %}
                                <img src="{{ asset(reservation.game.coverImage) }}" alt="{{ reservation.game.title }}" class="w-16 h-20 object-cover rounded">
                            {% else %}
                                <div class="w-16 h-20 bg-muted rounded flex items-center justify-center">
                                    <i class="fas fa-gamepad text-muted-foreground"></i>
                                </div>
                            {% endif %}
                            <div class="flex-1">
                                <h3 class="font-orbitron text-lg font-semibold text-foreground hover:text-primary transition-colors">
                                    <a href="{{ path('game_show', {id: reservation.game.id}) }}">{{ reservation.game.title }}</a>
                                </h3>
                                <p class="text-sm text-muted-foreground">{{ reservation.game.category }}</p>
                                {% if is_granted('ROLE_ADMIN') and reservation.user %}
                                    <p class="text-xs text-primary mt-1">
                                        <i class="fas fa-user mr-1"></i>{{ reservation.user.username }}
                                    </p>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Date -->
                        <div>
                            <div class="text-xs text-muted-foreground uppercase tracking-wider mb-1">Reserved</div>
                            <div class="text-foreground font-semibold">{{ reservation.reservationDate|date('M j, Y') }}</div>
                            <div class="text-xs text-muted-foreground">{{ reservation.reservationDate|date('g:i A') }}</div>
                        </div>

                        <!-- Status -->
                        <div class="flex flex-col sm:flex-row gap-3 items-start sm:items-center">
                            <span class="px-3 py-1 rounded-lg text-xs font-bold uppercase 
                                {% if reservation.status == 'confirmed' %}
                                    bg-green-500/20 text-green-400 border border-green-500/50
                                {% elseif reservation.status == 'pending' %}
                                    bg-yellow-500/20 text-yellow-400 border border-yellow-500/50
                                {% else %}
                                    bg-red-500/20 text-red-400 border border-red-500/50
                                {% endif %}">
                                {{ reservation.status }}
                            </span>

                            <!-- Actions -->
                            <div class="flex gap-2">
                                <a href="{{ path('game_show', {id: reservation.game.id}) }}" class="btn-gaming text-sm flex items-center gap-2">
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                                
                                {% if reservation.status == 'pending' and (reservation.user == app.user or is_granted('ROLE_ADMIN')) %}
                                    <a href="{{ path('reservation_edit', {id: reservation.id}) }}" class="btn-gaming text-sm flex items-center gap-2" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('reservation_delete', {id: reservation.id}) }}" style="display:inline;" onsubmit="return confirm('Cancel this reservation?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                        <button type="submit" class="btn-gaming text-sm flex items-center gap-2 text-red-400 hover:text-red-300" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <!-- Empty State -->
        <div class="card-gaming p-16 text-center">
            <i class="fas fa-calendar-times text-6xl text-muted-foreground mb-4 opacity-50"></i>
            <h2 class="font-orbitron text-2xl font-bold text-foreground mb-2">No Reservations</h2>
            <p class="text-muted-foreground mb-8">You haven't made any reservations yet. Start exploring games!</p>
            <a href="{{ path('game_index') }}" class="btn-hero inline-flex items-center gap-2">
                <i class="fas fa-search"></i>
                Browse Games
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}
