{% extends 'base.html.twig' %}

{% block title %}New Reservation - GameHub{% endblock %}

{% block body %}
<div class="container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="page-title">
            <h1>
                <i class="fas fa-plus"></i>
                Create New Reservation
            </h1>
            <p>Reserve a game for your gaming session</p>
        </div>
        <div class="page-actions">
            <a href="{{ path('reservation_index') }}" class="btn btn-outline">
                <i class="fas fa-arrow-left"></i>
                Back to Reservations
            </a>
        </div>
    </div>

    <!-- Reservation Form -->
    <div class="form-container">
        <div class="form-card">
            <div class="form-header">
                <h2>Reservation Details</h2>
                <p>Fill in the information below to create your reservation</p>
            </div>

            {{ form_start(form, {'attr': {'class': 'reservation-form'}}) }}

                <div class="form-section">
                    <h3>
                        <i class="fas fa-gamepad"></i>
                        Game Selection
                    </h3>
                    <div class="form-group">
                        {{ form_label(form.game, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.game, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.game, {'attr': {'class': 'form-error'}}) }}
                        <small class="form-text">Choose the game you want to reserve</small>
                    </div>
                </div>

                <div class="form-section">
                    <h3>
                        <i class="fas fa-calendar-alt"></i>
                        Date & Time
                    </h3>
                    <div class="form-group">
                        {{ form_label(form.reservationDate, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.reservationDate, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.reservationDate, {'attr': {'class': 'form-error'}}) }}
                        <small class="form-text">Select when you want to play (must be in the future)</small>
                    </div>
                </div>

                {% if is_granted('ROLE_ADMIN') %}
                    <div class="form-section">
                        <h3>
                            <i class="fas fa-cog"></i>
                            Admin Options
                        </h3>
                        <div class="form-group">
                            {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.status, {'attr': {'class': 'form-error'}}) }}
                        </div>
                    </div>
                {% endif %}

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i>
                        Create Reservation
                    </button>
                    <a href="{{ path('reservation_index') }}" class="btn btn-outline btn-lg">
                        <i class="fas fa-times"></i>
                        Cancel
                    </a>
                </div>

            {{ form_end(form) }}
        </div>

        <!-- Reservation Info -->
        <div class="info-sidebar">
            <div class="info-card">
                <h3>
                    <i class="fas fa-info-circle"></i>
                    Reservation Guidelines
                </h3>
                <ul class="info-list">
                    <li>Reservations must be made at least 1 hour in advance</li>
                    <li>You can only have one active reservation per game at a time</li>
                    <li>Reservations are subject to availability</li>
                    <li>You will receive a confirmation email once approved</li>
                    <li>Cancellation is allowed up to 24 hours before the reservation time</li>
                </ul>
            </div>

            <div class="info-card">
                <h3>
                    <i class="fas fa-question-circle"></i>
                    Need Help?
                </h3>
                <p>If you have any questions about making reservations or need assistance, please contact our support team.</p>
                <a href="#" class="btn btn-secondary btn-sm">
                    <i class="fas fa-envelope"></i>
                    Contact Support
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
<style>
/* Page Header */
.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--border-color);
}

.page-title h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--primary-color);
}

.page-title p {
    color: var(--text-secondary);
    font-size: 1.1rem;
}

.page-actions {
    display: flex;
    gap: 1rem;
}

/* Form Container */
.form-container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
}

.form-card {
    background: var(--card-bg);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 2rem;
}

.form-header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--border-color);
}

.form-header h2 {
    color: var(--primary-color);
    margin-bottom: 0.5rem;
}

.form-header p {
    color: var(--text-secondary);
}

.reservation-form {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.form-section {
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
}

.form-section:last-child {
    border-bottom: none;
    padding-bottom: 0;
}

.form-section h3 {
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    padding-top: 2rem;
    border-top: 2px solid var(--border-color);
}

/* Info Sidebar */
.info-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.info-card {
    background: var(--card-bg);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
}

.info-card h3 {
    color: var(--primary-color);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.info-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.info-list li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--text-secondary);
    line-height: 1.5;
}

.info-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--success);
    font-weight: bold;
}

/* Responsive */
@media (max-width: 768px) {
    .page-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }

    .form-container {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .form-actions {
        flex-direction: column;
    }

    .info-sidebar {
        order: -1;
    }
}
</style>

<script>
// Set minimum date for reservation
document.addEventListener('DOMContentLoaded', function() {
    const dateInput = document.querySelector('input[name="reservation[reservationDate]"]');
    if (dateInput) {
        // Set minimum date to 1 hour from now
        const minDate = new Date();
        minDate.setHours(minDate.getHours() + 1);
        dateInput.min = minDate.toISOString().slice(0, 16);
    }

    // Auto-submit form when game is selected (optional enhancement)
    const gameSelect = document.querySelector('select[name="reservation[game]"]');
    if (gameSelect) {
        gameSelect.addEventListener('change', function() {
            // Could add game info preview here
            console.log('Game selected:', this.value);
        });
    }
});
</script>
{% endblock %}
