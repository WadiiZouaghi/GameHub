{% extends 'base.html.twig' %}

{% block title %}Edit Reservation - GameHub{% endblock %}

{% block body %}
<div class="container">
    <!-- Page Header -->
    <div class="page-header">
        <div class="page-title">
            <h1>
                <i class="fas fa-edit"></i>
                Edit Reservation
            </h1>
            <p>Update your reservation details</p>
        </div>
        <div class="page-actions">
            <a href="{{ path('reservation_index') }}" class="btn btn-outline">
                <i class="fas fa-arrow-left"></i>
                Back to Reservations
            </a>
        </div>
    </div>

    <!-- Reservation Info -->
    <div class="reservation-info-card">
        <div class="reservation-summary">
            <div class="game-info">
                {% if reservation.game.coverImage %}
                    <img src="{{ asset(reservation.game.coverImage) }}" alt="{{ reservation.game.title }}">
                {% endif %}
                <div>
                    <h3>{{ reservation.game.title }}</h3>
                    <p class="game-genre">{{ reservation.game.genre }}</p>
                    <p class="reservation-status">
                        Status:
                        <span class="badge {{ reservation.status == 'confirmed' ? 'badge-success' : reservation.status == 'pending' ? 'badge-warning' : 'badge-danger' }}">
                            {{ reservation.status|title }}
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Form -->
    <div class="form-container">
        <div class="form-card">
            <div class="form-header">
                <h2>Update Reservation</h2>
                <p>Modify the reservation details below</p>
            </div>

            {{ form_start(form, {'attr': {'class': 'reservation-form'}}) }}

                <div class="form-section">
                    <h3>
                        <i class="fas fa-gamepad"></i>
                        Game Selection
                    </h3>
                    <div class="form-group">
                        {{ form_label(form.game, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.game, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.game, {'attr': {'class': 'form-error'}}) }}
                    </div>
                </div>

                <div class="form-section">
                    <h3>
                        <i class="fas fa-calendar-alt"></i>
                        Date & Time
                    </h3>
                    <div class="form-group">
                        {{ form_label(form.reservationDate, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.reservationDate, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.reservationDate, {'attr': {'class': 'form-error'}}) }}
                    </div>
                </div>

                {% if is_granted('ROLE_ADMIN') %}
                    <div class="form-section">
                        <h3>
                            <i class="fas fa-cog"></i>
                            Admin Options
                        </h3>
                        <div class="form-group">
                            {{ form_label(form.status, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.status, {'attr': {'class': 'form-error'}}) }}
                        </div>
                    </div>
                {% endif %}

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i>
                        Update Reservation
                    </button>
                    <a href="{{ path('reservation_index') }}" class="btn btn-outline btn-lg">
                        <i class="fas fa-times"></i>
                        Cancel
                    </a>
                </div>

            {{ form_end(form) }}
        </div>

        <!-- Edit Info -->
        <div class="info-sidebar">
            <div class="info-card">
                <h3>
                    <i class="fas fa-exclamation-triangle"></i>
                    Important Notes
                </h3>
                <ul class="info-list">
                    <li>Changes to confirmed reservations may require re-approval</li>
                    <li>Date/time changes must be at least 1 hour in the future</li>
                    <li>Game changes will reset the reservation status to pending</li>
                    <li>You will receive a notification when changes are processed</li>
                </ul>
            </div>

            {% if reservation.status == 'pending' %}
                <div class="info-card warning">
                    <h3>
                        <i class="fas fa-clock"></i>
                        Pending Approval
                    </h3>
                    <p>This reservation is waiting for admin approval. You can still make changes until it's confirmed.</p>
                </div>
            {% elseif reservation.status == 'confirmed' %}
                <div class="info-card success">
                    <h3>
                        <i class="fas fa-check-circle"></i>
                        Confirmed
                    </h3>
                    <p>This reservation has been confirmed. Changes may require re-approval.</p>
                </div>
            {% elseif reservation.status == 'cancelled' %}
                <div class="info-card danger">
                    <h3>
                        <i class="fas fa-times-circle"></i>
                        Cancelled
                    </h3>
                    <p>This reservation has been cancelled. You can create a new reservation if needed.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

<style>
/* Page Header */
.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--border-color);
}

.page-title h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--primary-color);
}

.page-title p {
    color: var(--text-secondary);
    font-size: 1.1rem;
}

.page-actions {
    display: flex;
    gap: 1rem;
}

/* Reservation Info Card */
.reservation-info-card {
    background: var(--card-bg);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 2rem;
    margin-bottom: 2rem;
}

.reservation-summary {
    display: flex;
    align-items: center;
    gap: 2rem;
}

.game-info {
    display: flex;
    align-items: center;
    gap: 1.5rem;
}

.game-info img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: var(--radius-md);
    border: 2px solid var(--border-color);
}

.game-info h3 {
    margin: 0 0 0.5rem 0;
    color: var(--primary-color);
}

.game-genre {
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
}

.reservation-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
}

/* Form Container */
.form-container {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
}

.form-card {
    background: var(--card-bg);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 2rem;
}

.form-header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--border-color);
}

.form-header h2 {
    color: var(--primary-color);
    margin-bottom: 0.5rem;
}

.form-header p {
    color: var(--text-secondary);
}

.reservation-form {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.form-section {
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
}

.form-section:last-child {
    border-bottom: none;
    padding-bottom: 0;
}

.form-section h3 {
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    padding-top: 2rem;
    border-top: 2px solid var(--border-color);
}

/* Info Sidebar */
.info-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.info-card {
    background: var(--card-bg);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
}

.info-card.warning {
    border-color: var(--warning);
    background: rgba(255, 193, 7, 0.1);
}

.info-card.success {
    border-color: var(--success);
    background: rgba(40, 167, 69, 0.1);
}

.info-card.danger {
    border-color: var(--error);
    background: rgba(220, 53, 69, 0.1);
}

.info-card h3 {
    color: var(--primary-color);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.info-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.info-list li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    color: var(--text-secondary);
    line-height: 1.5;
}

.info-list li::before {
    content: 'âš ';
    position: absolute;
    left: 0;
    color: var(--warning);
}

/* Responsive */
@media (max-width: 768px) {
    .page-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }

    .reservation-summary {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }

    .form-container {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .form-actions {
        flex-direction: column;
    }

    .info-sidebar {
        order: -1;
    }
}
</style>

<script>
// Set minimum date for reservation
document.addEventListener('DOMContentLoaded', function() {
    const dateInput = document.querySelector('input[name="reservation[reservationDate]"]');
    if (dateInput) {
        // Set minimum date to 1 hour from now
        const minDate = new Date();
        minDate.setHours(minDate.getHours() + 1);
        dateInput.min = minDate.toISOString().slice(0, 16);
    }
});
</script>
{% endblock %}
